<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:background="@drawable/shape_edit_text_search_bar"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:paddingVertical="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_student"
            style="@style/TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="26sp"
            tools:text="Nom d'étudiant " />

        <ImageView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_close" />
    </RelativeLayout>

    <TextView
        android:id="@+id/group_student"
        style="@style/TextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="26sp"
        tools:text="Group d'étudiant " />

    <TextView
        android:id="@+id/justif_motif_admin"
        style="@style/TextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="Motif:Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam placerat
molestie ipsum." />




    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:background="@drawable/shape_formateur_resource_rv_item"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:paddingHorizontal="14dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_pdf" />


        <TextView
            android:id="@+id/title"
            style="@style/TextMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Justif Document"
            android:textSize="17sp" />


        <ImageView
            android:id="@+id/downloadIcon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"

            android:clickable="true"
            android:src="@drawable/icon_download"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>


</LinearLayout>

