<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:background="@drawable/shape_edit_text_search_bar">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_teacher"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:src="@drawable/profileimg"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextSemiBold"
        tools:text="Formateur 1"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/assing_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:padding="0dp"
            android:text="Assign"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/shape_button_reply"
            app:backgroundTint="@color/main_green_color"/>
        <ImageView
            android:id="@+id/edit_bnt"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:clickable="true"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/icon_edit"
            />
        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:clickable="true"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/icon_delete"
            />
        
    </LinearLayout>



</LinearLayout>