<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".formateur.formateurPostResources.PostResourcesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="302dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:elevation="7dp"
            android:background="@drawable/shape_spinner_resources">

            <Spinner
                android:id="@+id/spinner_groups"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                tools:ignore="TouchTargetSizeCheck" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="302dp"
            android:layout_height="50dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:elevation="7dp"
            android:background="@drawable/shape_spinner_resources">

            <Spinner
                android:id="@+id/spinner_modules"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                tools:ignore="TouchTargetSizeCheck" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/select_file"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/filepickericon"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:id="@+id/selected_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="sÃ©lectionner un fichier"
            android:layout_marginTop="4dp"
            android:textSize="20sp"
            style="@style/TextRegular" />

        <Button
            android:id="@+id/post_ressource_button"
            android:layout_width="310dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            app:backgroundTint="@color/main_green_color"
            android:background="@drawable/shape_button_login"
            android:text="@string/post"
            android:textColor="@color/white"
            style="@style/TextSemiBold"
            android:textSize="21sp"
            android:layout_marginTop="120dp"/>

    </LinearLayout>

</FrameLayout>